<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinssible.camerarecorder.camerarecorderdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_video"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_video"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CameraCaptureActivity">
        </activity>
        <activity android:name=".PlayerActivity">
        </activity>
        <activity
            android:name=".TestRemuxerActivity"
            android:hardwareAccelerated="true">
        </activity>
        <activity
            android:name=".FfmpegTestActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>