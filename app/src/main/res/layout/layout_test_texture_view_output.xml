<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinssible.camerarecorder.camerarecorderdemo.PlayerActivity">

    <TextView
        android:id="@+id/label_src_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SrcPath : "
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_src_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/label_src_path"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/label_dst_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_src_path"
        android:layout_marginLeft="10dp"
        android:text="DstPath : "
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_dst_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_src_path"
        android:layout_toRightOf="@+id/label_dst_path"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/label_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_dst_path"
        android:layout_margin="10dp"
        android:text="Filter : "
        android:textAllCaps="false" />

    <Spinner
        android:id="@+id/spinner_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_dst_path"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/label_filter" />


    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_filter"
        android:layout_margin="10dp"
        android:text="Start"
        android:textAllCaps="false" />

    <ProgressBar
        android:id="@+id/progress_remux"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />


    <TextView
        android:id="@+id/mulit_tv_process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progress_remux"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        />


</RelativeLayout>
